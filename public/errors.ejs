<link href="/css/html.css" rel="stylesheet">
<div class="error-page">
<img src="/assets/error.png" />
  <div>
    <h1 id="error-code" class="error-code"></h1>
    <div class="error-wrapper-message">
      <h2 id="error-message" class="error-message"></h2>
    </div>
    <p><a href="/" class="error-link">Back to the home page</a></p>
  </div>
</div>

<script>
  var errorCode = "<%= code %>", errorMessage = "<%= message %>";
  document.getElementById("error-code").innerHTML = errorCode;
  document.getElementById("error-message").innerHTML = errorMessage;
</script>

<style>
.error-page {
  color: #000;
  background: #fff;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  position: absolute;
  font-family: "SF UI Text", "Helvetica Neue", "Lucida Grande";
  text-align: center;
  padding-top: 10%;
}
.error-code {
  display: inline-block;
  font-size: 36px;
  font-weight: 500;
  vertical-align: top;
  border-right: 1px solid rgba(0, 0, 0, 0.298039);
  margin: 0px 20px 0px 0px;
  padding: 10px 20px;
}
.error-wrapper-message {
  display: inline-block;
  text-align: left;
  line-height: 49px;
  height: 0px;
  vertical-align: middle;
}
.error-message {
  font-size: 24px;
  font-weight: normal;
  margin: 0px;
  padding: 0px;
}
.error-link {
  color: #00BCD4;
  font-weight: normal;
  text-decoration: none;
  font-size: 24px;
  line-height: 200%;
}
</style>